#!/usr/bin/env bash

case "$1" in

    "fs-backend")
        mocha test/fs-backend.js
        ;;
        
    "http-store")
        node test/http-store-server.js &
        server_pid=$!
        mocha test/http-store-client.js
        kill -KILL $server_pid
        wait
        ;;
            
    *)
        echo "Syntax:"
        echo "> npm test -- fs-backend"
        echo "> npm test -- http-store"
        echo ""
        ;;

esac
